      <Text layoutX="164.0" layoutY="163.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Benutzername:" />
      <TextField fx:id="username" layoutX="265.0" layoutY="146.0" prefHeight="5.0" prefWidth="149.0" />
      <Text layoutX="164.0" layoutY="205.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Passwort:" />
      <PasswordField fx:id="password" layoutX="265.0" layoutY="188.0" />
      <Button layoutX="265.0" layoutY="270.0" mnemonicParsing="false" onAction="#LoginController" prefHeight="25.0" prefWidth="149.0" text="Einloggen" />
      <Label fx:id="error" layoutX="265.0" layoutY="231.0" text="Benutzername oder Passwort falsch!" textFill="RED" visible="false" />
   </AnchorPane>
</VBox>
